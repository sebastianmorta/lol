

<div>
    <h2>All Dishchuj are shown here</h2>
</div>

<h2>@Model.CurrentCategory</h2>

@{ 
    foreach (var food in Model.Foods)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <img src="@food.ImageThumbnailUrl" alt="" />
                <div class="caption">
                    <h3 class="pull-right">@food.Price.ToString("c")</h3>
                    <h3>
                        <a>@food.Name</a>
                    </h3>
                    <p>@food.ShortDescription</p>
                </div>
            </div>
        </div>
    }
}